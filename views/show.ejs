<%- include ("partials/header") %>


<div class="ui main text container segment">
    <div class="ui huge header"> <%= blogs.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blogs.image %>" alt=""> 
            <div class="content">
                <span><%= blogs.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%= blogs.body %></p>
            </div>
            <a class="ui orange basic button" href="/blogs/<%= blogs._id %>/edit">Update</a>
            <form id="delete" method="POST" action="/blogs/<%= blogs._id %>?_method=DELETE">
                <button class="ui red basic button">Delete</button>
            </form>
        </div> 
    </div>  
</div>


<%- include ("partials/footer") %>