<%- include ("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blogs.title %></div>
    <form class="ui form" action="/blogs/<%= blogs._id %>?_method=PUT" method="POST">
      <div class="field">
          <label for="">Title</label>
          <input type="text" name="blog[title]" value="<%= blogs.title %>">
      </div>  
      <div class="field">
        <label for="">Image</label>
        <input type="text" name="blog[image]" value="<%= blogs.image %>">
    </div>  
    <div class="field">
        <label for="">Blog Content</label>
        <textarea name="blog[body]" id="" cols="30" rows="10" value="<%= blogs.body %>"><%= blogs.body %></textarea>
    </div>      
    <input class="ui inverted orange button" type="submit">
    </form>
</div>

<%- include ("partials/footer") %>